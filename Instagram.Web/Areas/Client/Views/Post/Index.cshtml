
@{
    ViewData["Title"] = "Index";
}

@using Instagram.Web.Areas.Client.Models.Post;
@model IndexViewModel;

<form class="card w-50 p-3 mt-2 mb-3 mx-auto" method="post" asp-action="add" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <input class="form-control" type="file" name="postImage">
    </div>
    <div class="form-group mb-2">
        <textarea class="form-control" rows="3" placeholder="Enter caption" name="Caption"></textarea>
    </div>
    <button class="btn btn-lg btn-primary" type="submit">Post</button>
</form>


<div>
    @foreach(var post in Model.Posts){
        <div class="card bg-light mb-3 mx-auto" style="max-width: 650px;">
          <div class="card-header">@post.Publisher.Username</div>
          <div class="card-body">
              <img src="@post.ImageUrl" style="width: 600px; height: 400px;"/>
              <p class="card-text">@post.Caption</p>
          </div>
        </div>
    }
</div>